# Some nice defaults
defscrollback 100000
defutf8 on
startup_message off
vbell off
defflow off
escape ^Jj
#escape ^Hh
#defescape ^Aa

# Serial port session specifics
sessionname usb-console
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H users: %u"

source /etc/screenrc.d/multiuser-plus
logfile flush 1

