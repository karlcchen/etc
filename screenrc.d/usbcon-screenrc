#
# usbcon-screenrc 
#
# Some nice defaults
#
defscrollback 100000
defutf8 on
startup_message off
vbell off
defflow off
escape ^Jj
#escape ^Hh
#defescape ^Aa

# Serial port session specifics
sessionname usb-console
# caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H users: %u"

source /etc/screenrc.d/multiuser-plus
logfile flush 1

# Start up windows for each serial port we want to monitor.  There's no way to specify multiple on the command line
chdir /home/kchen

screen -t main 0 login kchen
# number 0 
logfile /home/kchen/uc-log/uc0/w0.log
logfile flush 1
log on

#screen -t W_9
#number 9
#logfile /home/kchen/uc-log/uc9/w9.log
#logfile flush 1
#log on
#
#screen -t W_8
#number 8
#logfile /home/kchen/uc-log/uc8/w8.log
#logfile flush 1
#log on
#
screen -t UC_3 /dev/ttyUSB6 115200
number 7
logfile /home/kchen/uc-log/uc7/uc7.log
logfile flush 1
log on
#
screen -t UC_3 /dev/ttyUSB5 115200
number 6
logfile /home/kchen/uc-log/uc6/uc6.log
logfile flush 1
log on
#
screen -t UC_3 /dev/ttyUSB4 115200
number 5
logfile /home/kchen/uc-log/uc5/uc5.log
logfile flush 1
log on
#
screen -t UC_3 /dev/ttyUSB3 115200
number 4
logfile /home/kchen/uc-log/uc4/uc4.log
logfile flush 1
log on
#
screen -t UC_2 /dev/ttyUSB2 115200
number 3
logfile /home/kchen/uc-log/uc3/uc3.log
logfile flush 1
log on
#
screen -t UC_1 /dev/ttyUSB1 115200
number 2
logfile /home/kchen/uc-log/uc2/uc2.log
logfile flush 1
log on
#
screen -t UC_0 /dev/ttyUSB0 115200
logfile /home/kchen/uc-log/uc1/uc1.log
logfile flush 1
number 1
log on
#
select 1
